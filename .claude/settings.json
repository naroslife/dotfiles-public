{
  "permissions": {
    "allow": ["WebFetch", "Bash"],
    "deny": [],
    "additionalDirectories": [
      "/",
      "/nix",
      "/home",
      "/var",
      "/usr",
      "/proc",
      "/opt",
      "/bin",
      "/lib",
      "/lib32",
      "/lib64"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccline"
  },
  "env": {
    "USE_BUILTIN_RIPGREP": "1",
    "CLAUDE": "true",
    "MCP_TIMEOUT": "300000",
    "MCP_TOOL_TIMEOUT": "300000"
  }
}
